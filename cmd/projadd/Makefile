# Write The Main Code Name Here Without Any Extensions


# Spcify Compiler
CC = gcc


# Write The Input Path for Header Files and Objects
INPUT_PATH = ./headers/


# Specify Headers : The ".h" Files for your Library 
HEADERS = $(INPUT_PATH)project_file_check.h \
		$(INPUT_PATH)projadd_structure.h 	\
		$(INPUT_PATH)projadd_functions.h	\
		$(INPUT_PATH)projadd_error_msg.h 	 

# Specify Objects : The ".o" Files Generated by Compiling the ".cpp" Files
OBJECTS = $(INPUT_PATH)project_file_check.o \
		$(INPUT_PATH)projadd_structure.o	\
		$(INPUT_PATH)projadd_functions.o	\
		$(INPUT_PATH)projadd_error_msg.o \
	

	
# Object File for project_file_check : Checks the project file for errors
$(INPUT_PATH)project_file_check.o : $(patsubst %.o, %.c, $@) $(INPUT_PATH)project_file_check.h
	$(CC) -c $(patsubst %.o, %.c, $@) -o $@


# Object File for project_structure : Initializes the structure elements
$(INPUT_PATH)project_structure.o : $(patsubst %.o, %.c, $@) $(INPUT_PATH)projadd_structure.h
	$(CC) -c $(patsubst %.o, %.c, $@) -o $@


# Object File for project_error_msg : Contains all the error messages to be printed
$(INPUT_PATH)projadd_error_msg.o : $(patsubst %.o, %.c, $@) $(INPUT_PATH)projadd_error_msg.h
	$(CC) -c $(patsubst %.o, %.c, $@) -o $@

# Object File for project_functions : Contain all the functions needed to perform projadd
$(INPUT_PATH)projadd_functions.o : $(patsubst %.o, %.c, $@) $(INPUT_PATH)projadd_functions.h
	$(CC) -c $(patsubst %.o, %.c, $@) -o $@


	 
# Compilation of the Main Code
ifneq ($(MAKECMDGOALS), clean)
$(MAKECMDGOALS) : $(MAKECMDGOALS).o $(OBJECTS)
	$(CC) -o $(MAKECMDGOALS) -lm $(MAKECMDGOALS).o $(OBJECTS)  

# Main Code Object File
$(MAKECMDGOALS).o : $(MAKECMDGOALS).c $(HEADERS) $(OPENCV_HEADERS)
	$(CC) -c $(MAKECMDGOALS).c 
endif

	


.PHONY : clean
clean :
	rm -f $(OBJECTS) *.o
